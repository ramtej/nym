{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2021", "dom", "dom.iterable", "esnext"],
    "outDir": "./dist/",
    "module": "esnext",
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules", "**/node_modules", "dist", "**/dist"]
}
